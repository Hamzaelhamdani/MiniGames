/* Clean minimal styles */
page {
  height: 100vh;
  width: 100vw;
  background-color: #000;
  overflow: hidden;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
}

.container {
  width: 100%;
  height: 100%;
  position: relative;
  opacity: 0;
  animation: fadeIn 0.8s ease-out forwards;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.game-canvas {
  width: 100%;
  height: 100%;
  display: block;
}
