/* pages/difficulty/difficulty.wxss */
.difficulty-options {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
  padding: 40rpx;
}

.difficulty-btn {
  background: #1a1a1a;
  border: 6rpx solid #2a2a2a;
  color: #ffffff;
  padding: 60rpx;
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.difficulty-btn::after {
  border: none;
}

.difficulty-icon {
  font-size: 100rpx;
}

.difficulty-title {
  font-size: 40rpx;
  font-weight: 700;
}

.difficulty-desc {
  font-size: 28rpx;
  color: #aaa;
}
