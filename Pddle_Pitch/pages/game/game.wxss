/* pages/game/game.wxss */
page {
  height: 100vh;
  width: 100vw;
  background: #0a0a0a;
  overflow: hidden;
}

.game-page {
  height: 100vh;
  width: 100vw;
  display: flex;
  flex-direction: column;
  background: #0a0a0a;
}

.pong-canvas {
  flex: 1;
  width: 100%;
  background: #0a4a0a;
}

.controls {
  display: flex;
  gap: 10rpx;
  padding: 15rpx;
  background: rgba(0, 0, 0, 0.9);
  height: 100rpx;
}

.btn {
  flex: 1;
  background: #1a1a1a;
  color: #fff;
  border: 2rpx solid #ff6b35;
  font-size: 28rpx;
  padding: 20rpx;
  border-radius: 10rpx;
}

.btn::after {
  border: none;
}
