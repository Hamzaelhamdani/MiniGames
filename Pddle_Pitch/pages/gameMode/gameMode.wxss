/* pages/gameMode/gameMode.wxss */
.mode-options {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
  padding: 40rpx;
}

.mode-btn {
  background: #1a1a1a;
  border: 6rpx solid #2a2a2a;
  color: #ffffff;
  padding: 60rpx;
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.mode-btn::after {
  border: none;
}

.mode-icon {
  font-size: 120rpx;
}

.mode-title {
  font-size: 40rpx;
  font-weight: 700;
}

.mode-desc {
  font-size: 28rpx;
  color: #aaa;
}
