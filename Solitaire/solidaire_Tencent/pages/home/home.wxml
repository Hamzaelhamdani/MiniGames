<!--pages/home/home.wxml-->
<view class="home-container">
  <!-- Background Pattern -->
  <view class="bg-pattern">
    <text class="bg-suit s1">♠</text>
    <text class="bg-suit s2">♥</text>
    <text class="bg-suit s3">♦</text>
    <text class="bg-suit s4">♣</text>
    <text class="bg-suit s5">♠</text>
    <text class="bg-suit s6">♥</text>
  </view>

  <view class="content">
    <!-- Logo -->
    <view class="logo-section">
      <view class="cards-fan">
        <view class="fan-card c1">
          <text class="fan-suit red">♥</text>
        </view>
        <view class="fan-card c2">
          <text class="fan-suit black">♠</text>
        </view>
        <view class="fan-card c3">
          <text class="fan-suit red">♦</text>
        </view>
        <view class="fan-card c4">
          <text class="fan-suit black">♣</text>
        </view>
      </view>
      
      <text class="app-title">Solitaire</text>
      <text class="app-subtitle">Jeu de Cartes Classique</text>
    </view>

    <!-- Stats Card -->
    <view wx:if="{{showStats}}" class="stats-card">
      <view class="stats-header">
        <text class="stats-icon">♦</text>
        <text class="stats-title">Statistiques</text>
      </view>
      <view class="stats-grid">
        <view class="stat-item">
          <text class="stat-value">{{stats.gamesPlayed}}</text>
          <text class="stat-label">Parties</text>
        </view>
        <view class="stat-item">
          <text class="stat-value win">{{stats.gamesWon}}</text>
          <text class="stat-label">Victoires</text>
        </view>
        <view class="stat-item">
          <text class="stat-value">{{stats.winRate}}%</text>
          <text class="stat-label">Taux</text>
        </view>
      </view>
    </view>

    <!-- Image Logo -->
    <view class="logo-image-container">
      <image class="logo-image" src="/images/logo.png" mode="aspectFit"></image>
    </view>

    <!-- Play Button -->
    <view class="actions">
      <button class="btn-play" bindtap="startGame">
        <text class="btn-text">Nouvelle Partie</text>
      </button>
    </view>

    <!-- Footer -->
    <view class="footer">
      <text class="footer-text">♠ ♥ ♦ ♣</text>
    </view>
  </view>
</view>
