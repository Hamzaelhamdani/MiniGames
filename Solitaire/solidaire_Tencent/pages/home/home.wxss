/**pages/home/home.wxss**/

.home-container {
  min-height: 100vh;
  position: relative;
  overflow: hidden;
}

/* Background Pattern */
.bg-pattern {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 0;
}

.bg-suit {
  position: absolute;
  font-size: 120rpx;
  opacity: 0.08;
  color: #FFFFFF;
}

.s1 { top: 10%; left: 5%; transform: rotate(-15deg); }
.s2 { top: 30%; right: 10%; transform: rotate(20deg); }
.s3 { top: 55%; left: 15%; transform: rotate(-10deg); }
.s4 { top: 75%; right: 5%; transform: rotate(15deg); }
.s5 { bottom: 10%; left: 50%; transform: rotate(-5deg); }
.s6 { top: 5%; left: 60%; transform: rotate(25deg); }

/* Content */
.content {
  position: relative;
  z-index: 1;
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  box-sizing: border-box;
}

/* Logo Section */
.logo-section {
  text-align: center;
  margin-bottom: 60rpx;
  margin-top: 160rpx;
}

/* Cards Fan */
.cards-fan {
  position: relative;
  width: 280rpx;
  height: 180rpx;
  margin: 0 auto 40rpx;
}

.fan-card {
  position: absolute;
  width: 100rpx;
  height: 140rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
  left: 50%;
  bottom: 0;
  transform-origin: bottom center;
}

.c1 { transform: translateX(-50%) rotate(-25deg); z-index: 1; }
.c2 { transform: translateX(-50%) rotate(-8deg); z-index: 2; }
.c3 { transform: translateX(-50%) rotate(8deg); z-index: 3; }
.c4 { transform: translateX(-50%) rotate(25deg); z-index: 4; }

.fan-suit {
  font-size: 56rpx;
}

.fan-suit.red {
  color: #FF7900;
}

.fan-suit.black {
  color: #212121;
}

/* Title */
.app-title {
  display: block;
  font-size: 72rpx;
  font-weight: 800;
  color: #FFFFFF;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3);
  margin-bottom: 12rpx;
}

.app-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  letter-spacing: 4rpx;
  text-transform: uppercase;
}

/* Offline Badge */
.offline-badge {
  display: inline-flex;
  align-items: center;
  gap: 10rpx;
  margin-top: 24rpx;
  padding: 12rpx 24rpx;
  background: rgba(76, 175, 80, 0.2);
  border-radius: 32rpx;
  border: 1px solid rgba(76, 175, 80, 0.4);
}

.badge-icon {
  font-size: 18rpx;
  color: #4CAF50;
}

.badge-text {
  font-size: 24rpx;
  color: #FFFFFF;
  font-weight: 500;
}

/* Stats Card */
.stats-card {
  width: 100%;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  border: 1px solid rgba(255, 255, 255, 0.15);
  margin-bottom: 48rpx;
}

.stats-header {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.stats-icon {
  font-size: 28rpx;
  color: #FF7900;
}

.stats-title {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.stats-grid {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 800;
  color: #FFFFFF;
  margin-bottom: 8rpx;
}

.stat-value.win {
  color: #FF7900;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* Logo Image */
.logo-image-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
  flex: 1;
}

.logo-image {
  width: 300rpx;
  height: 300rpx;
}

/* Actions */
.actions {
  width: 100%;
  margin-top: auto;
  padding: 40rpx 0;
}

.btn-play {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  padding: 36rpx;
  background: #FF7900;
  border: none;
  border-radius: 28rpx;
  box-shadow: 0 12rpx 36rpx rgba(255, 121, 0, 0.4);
}

.btn-play:active {
  transform: scale(0.97);
}

.btn-play .btn-text {
  font-size: 36rpx;
  font-weight: 700;
  color: #FFFFFF;
}

/* Footer */
.footer {
  padding: 32rpx 0;
}

.footer-text {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.3);
  letter-spacing: 16rpx;
}
