page {
  height: 100%;
  width: 100%;
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  background-color: #1C1C1C;
  color: #FFFFFF;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  padding: 10px 20px; /* Reduced padding */
  padding-bottom: 20px;
  box-sizing: border-box;
  background-image: radial-gradient(circle at top left, #4a2800 0%, transparent 60%),
      radial-gradient(circle at bottom right, #4a2800 0%, transparent 60%);
  background-color: #1C1C1C;
}

.content-wrapper {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex-grow: 1;
  width: 100%;
}

.game-logo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 15px; /* Reduced from 40px */
}

.logo {
  width: 150px; /* Reduced from 180px */
  height: 60px; /* Reduced from 80px */
  margin-bottom: 5px;
}

.game-slogan {
  font-size: 9px;
  letter-spacing: 2px;
  color: #FFFFFF;
  text-transform: uppercase;
  font-style: italic;
  opacity: 0.8;
  max-width: 180px;
  text-align: center;
  line-height: 1.2;
}

.game-header {
  text-align: center;
  margin-bottom: 15px; /* Reduced from 40px */
}

.level-indicator {
  font-size: 18px; /* Reduced from 22px */
  letter-spacing: 4px;
  font-weight: 800;
  margin-bottom: 5px; /* Reduced from 15px */
  text-transform: uppercase;
  color: #FFFFFF;
  display: block;
}

.timer {
  font-size: 60px; /* Reduced from 72px */
  font-weight: bold;
  color: #FF7900;
  line-height: 1;
}

.target-text-container {
  background-color: #000000;
  border: 2px solid #FF7900;
  border-radius: 20px;
  padding: 15px; /* Reduced from 25px */
  width: 100%;
  max-width: 350px;
  height: 110px; /* Reduced from 130px */
  margin-bottom: 15px; /* Reduced from 30px */
  box-shadow: 0 0 20px rgba(255, 121, 0, 0.3);
  box-sizing: border-box;
}

.target-text {
  color: #999;
  font-size: 13px; /* Slightly smaller */
  line-height: 1.5;
  text-align: left;
}

.char {
  transition: color 0.1s;
}

.char.correct {
  color: #FF7900;
}

.char.incorrect {
  color: red;
  text-decoration: underline;
}

.input-box {
  width: 100%;
  max-width: 350px;
  height: 90px;
  border-radius: 20px;
  padding: 25px;
  border: 2px solid #FF7900;
  font-size: 14px;
  font-family: inherit;
  background-color: #FFFFFF;
  color: #000;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
  box-sizing: border-box;
}

.input-box:focus {
  box-shadow: 0 0 15px rgba(255, 121, 0, 0.5);
}

.level-complete-section {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20px;
  width: 100%;
  margin-top: 20px;
  margin-bottom: 80px;
  animation: fadeIn 0.5s ease-out;
}

.accuracy-container {
  text-align: center;
}

.accuracy-percent {
  font-size: 40px;
  color: #FF7900;
  font-weight: bold;
  display: block;
  line-height: 1;
}

.accuracy-label {
  font-size: 16px;
  color: #FF7900;
  font-weight: bold;
  display: block;
}

.next-level-btn {
  background-color: #FF7900;
  color: #FFFFFF;
  border: none;
  border-radius: 15px;
  padding: 10px 20px;
  font-size: 20px;
  font-weight: bold;
  line-height: 1.5;
  box-shadow: 0 0 15px rgba(255, 121, 0, 0.5);
  background: linear-gradient(to bottom, #FF8A1F, #FF7900); 
}

.retry-btn {
  background-color: #FFD700;
  color: #FFFFFF;
  border: none;
  border-radius: 15px;
  padding: 10px 30px;
  font-size: 20px;
  font-weight: bold;
  line-height: 1.5;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.footer {
  width: 100%;
  text-align: center;
  margin-top: 20px;
}

.footer text {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.5);
}
