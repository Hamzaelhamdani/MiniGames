page {
  height: 100%;
  width: 100%;
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  background-color: #1C1C1C;
  color: #FFFFFF;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  padding: 20px 30px;
  box-sizing: border-box; /* Important! */
  background-image: radial-gradient(circle at top left, #4a2800 0%, transparent 60%),
      radial-gradient(circle at bottom right, #4a2800 0%, transparent 60%);
  background-color: #1C1C1C;
}

.congrats-container {
  justify-content: center;
  padding-top: 0;
}

.game-logo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40px;
}

.logo {
  width: 180px;
  height: 80px;
  margin-bottom: 8px;
}

.game-slogan {
  font-size: 10px;
  letter-spacing: 2px;
  color: #FFFFFF;
  text-transform: uppercase;
  font-style: italic;
  opacity: 0.8;
  max-width: 180px;
  text-align: center;
  line-height: 1.2;
}

.congrats-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  margin-bottom: 60px;
}

.congrats-title {
  font-size: 40px;
  color: #FF7900;
  font-weight: 800;
  text-transform: capitalize;
  display: block;
  margin-bottom: 10px;
}

.congrats-subtitle {
  font-size: 32px;
  color: #FFFFFF;
  font-weight: 800;
  line-height: 1.2;
  display: block;
  margin-bottom: 60px;
  white-space: pre-wrap; /* allow newline */
}

.home-btn {
  background-color: #FF7900;
  border: none;
  border-radius: 30px;
  width: 120px;
  height: 120px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 0 30px rgba(255, 121, 0, 0.4);
  background: linear-gradient(to bottom, #FF8A1F, #FF7900);
}

.home-btn:active {
  transform: scale(0.95);
}

.footer {
  width: 100%;
  text-align: center;
  margin-top: 20px; /* Space from content */
  position: absolute; /* simple way to put at bottom if container is fully high, or just flex end */
  bottom: 30px;
}

.footer text {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.5);
}
