/* pages/game/game.wxss */
page {
  height: 100vh;
  background: linear-gradient(135deg, #1a1a1a 0%, #000000 100%);
  color: #FFFFFF;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.scoreboard {
    display: flex;
    justify-content: space-between;
    width: 600rpx;
    margin-bottom: 40rpx;
    font-size: 32rpx;
    font-weight: bold;
    color: #888;
    background: rgba(255,255,255,0.05);
    padding: 20rpx 40rpx;
    border-radius: 20rpx;
}

.status {
  margin-bottom: 80rpx;
  font-size: 56rpx;
  font-weight: 800;
  color: #FFA500;
  text-shadow: none;
  letter-spacing: 2rpx;
}

.board {
  position: relative;
  display: flex;
  flex-wrap: wrap;
  width: 640rpx;
  height: 640rpx;
  background-color: rgba(255, 255, 255, 0.05);
  gap: 20rpx;
  padding: 20rpx;
  border-radius: 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.5);
}

.cell {
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(145deg, #1f1f1f, #151515);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 30rpx;
  box-shadow: 10rpx 10rpx 20rpx #0b0b0b, -10rpx -10rpx 20rpx #292929;
  transition: all 0.2s;
}

.cell:active {
  box-shadow: inset 10rpx 10rpx 20rpx #0b0b0b, inset -10rpx -10rpx 20rpx #292929;
}

.cell-text {
  font-size: 128rpx;
  font-weight: 900;
  animation: popIn 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.x-mark {
  background: linear-gradient(to bottom right, #FFA500, #FF4500);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  text-shadow: none;
}

.o-mark {
  background: linear-gradient(to bottom right, #ffffff, #a0a0a0);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  text-shadow: none;
}

.footer {
  margin-top: 120rpx;
}

.restart-btn {
  background: transparent;
  color: #FFA500;
  border: 4rpx solid #FFA500;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-weight: bold;
  font-size: 32rpx;
  transition: all 0.3s;
}

.restart-btn:active {
  background: rgba(255, 165, 0, 0.1);
  transform: scale(0.95);
}

@keyframes popIn {
  from { transform: scale(0); opacity: 0; }
  to { transform: scale(1); opacity: 1; }
}

/* MODAL STYLES */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.9);
  backdrop-filter: blur(10px);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: fadeIn 0.3s;
}

.modal-content {
  width: 80%;
  background: #111;
  padding: 60rpx 40rpx;
  border-radius: 40rpx;
  border: 2rpx solid #333;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
  animation: scaleIn 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.result-title {
  font-size: 80rpx;
  font-weight: 900;
  text-transform: uppercase;
  text-align: center;
}

.text-x { color: #FFA500; text-shadow: none; }
.text-o { color: #FFFFFF; text-shadow: none; }
.text-draw { color: #888; }

.result-subtext {
  color: #ccc;
  font-size: 32rpx;
  text-align: center;
}

.modal-btn {
  width: 100%;
  padding: 30rpx 0;
  border-radius: 60rpx;
  font-weight: bold;
  font-size: 32rpx;
}

.restart-action {
  background: #FFA500;
  color: #000;
  box-shadow: none;
}

.menu-action {
  background: transparent;
  color: #fff;
  border: 2rpx solid #333;
}

@keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
@keyframes scaleIn { from { transform: scale(0.8); opacity: 0; } to { transform: scale(1); opacity: 1; } }

/* WINNING LINE */
.winning-line {
  position: absolute;
  background: #FFF;
  box-shadow: none;
  z-index: 99; /* Higher than cell text */
  border-radius: 20rpx;
  opacity: 0.9;
  pointer-events: none; /* Let clicks pass through if needed */
}

/* Rows (Horizontal) */
.row-0, .row-1, .row-2 {
    height: 16rpx;
    width: 600rpx; 
    left: 20rpx;
    transform-origin: center;
    animation: lineDraw 0.4s cubic-bezier(0.23, 1, 0.32, 1) forwards;
}
.row-0 { top: 112rpx; } /* Center 120 - 8 */
.row-1 { top: 332rpx; } /* Center 340 - 8 */
.row-2 { top: 552rpx; } /* Center 560 - 8 */

@keyframes lineDraw {
    from { transform: scaleX(0); }
    to { transform: scaleX(1); }
}

/* Cols (Vertical) */
.col-0, .col-1, .col-2 {
    width: 16rpx;
    height: 600rpx;
    top: 20rpx;
    transform-origin: center;
    animation: lineDrawVert 0.4s cubic-bezier(0.23, 1, 0.32, 1) forwards;
}
.col-0 { left: 112rpx; }
.col-1 { left: 332rpx; }
.col-2 { left: 552rpx; }

@keyframes lineDrawVert { from { transform: scaleY(0); } to { transform: scaleY(1); } }

/* Diagonals */
.diag-0, .diag-1 {
    width: 800rpx; 
    height: 16rpx;
    top: 332rpx; /* Center Vertical */
    left: -80rpx; /* (640 - 800) / 2 */
    transform-origin: center;
}

.diag-0 {
    animation: lineDrawDiag 0.5s ease-out forwards;
}
.diag-1 {
    animation: lineDrawDiag2 0.5s ease-out forwards;
}

@keyframes lineDrawDiag { from { transform: rotate(45deg) scaleX(0); } to { transform: rotate(45deg) scaleX(1); } }
@keyframes lineDrawDiag2 { from { transform: rotate(-45deg) scaleX(0); } to { transform: rotate(-45deg) scaleX(1); } }
