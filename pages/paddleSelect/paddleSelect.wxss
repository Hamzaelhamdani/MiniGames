/* pages/paddleSelect/paddleSelect.wxss */
.paddle-options {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
  padding: 40rpx;
}

.paddle-btn {
  background: #1a1a1a;
  border: 6rpx solid #2a2a2a;
  color: #ffffff;
  padding: 60rpx;
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.paddle-btn::after {
  border: none;
}

.paddle-preview {
  width: 40rpx;
  height: 200rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.white-paddle {
  background: #ffffff;
  box-shadow: 0 0 40rpx rgba(255, 255, 255, 0.5);
}

.orange-paddle {
  background: #ff6b35;
  box-shadow: 0 0 40rpx rgba(255, 107, 53, 0.5);
}

.paddle-title {
  font-size: 40rpx;
  font-weight: 700;
}

.paddle-desc {
  font-size: 28rpx;
  color: #aaa;
}
